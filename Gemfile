source "https://rubygems.org"

gem "jekyll"
gem "minimal-mistakes-jekyll" # Jekyll 테마
gem "webrick" # 로컬 호스팅을 위한 필요 Gem
gem "faraday-retry"
gem "sass-embedded", "~> 1.69.5" # 최신 Sass 사용을 위한 gem

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jekyll-include-cache"
  gem "jekyll-remote-theme"
end
